<Window x:Class="IT3B_Kostky.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT3B_Kostky"
        mc:Ignorable="d"
        Title="RollDicer" Height="289" Width="440">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" FontSize="30" Content="Label" HorizontalAlignment="Center"  Grid.Row="1" VerticalAlignment="Center" Height="100" Width="100"/>
        <Label Grid.Column="2" Content="Label" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="100" Width="100"/>
        <Label Grid.Column="3" Content="Label" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="100" Width="100"/>
        <Label Grid.Column="1" Content="Label" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="100" Width="100"/>
        <Label Grid.Column="2" Content="Label" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="100" Width="100"/>
        <Label Grid.Column="3" Content="Label" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="100" Width="100"/>

    </Grid>
</Window>
